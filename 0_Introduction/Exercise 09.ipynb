   "source": [
    "a=input(\"input the number of lines: \")\n",
    "b=int(a)-1\n",
    "c=1\n",
    "for i in range(int(a)):\n",
    "    for i in range(b):\n",
    "        print(\".\",end =\" \")\n",
    "    for i in range(c):\n",
    "        print(\"*\",end =\" \") \n",
    "    print('\\n')\n",
    "    b=b-1\n",
    "    c=c+2\n",
    "for i in range ((c-2)//2):\n",
    "    print(\".\",end =\" \")\n",
    "print(\"||\")"
   ]
  }
